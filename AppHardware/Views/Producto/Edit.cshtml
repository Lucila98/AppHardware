@model AppHardware.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductoId" />
            <div class="form-group">
                <label asp-for="CatId" class="control-label"></label>
                <select asp-for="CatId" class="form-control" asp-items="Html.GetEnumSelectList<Categoria>()">
                    <option selected="selected" value="">Seleccionar</option>
                </select>
                <span asp-validation-for="CatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarcaNombre" class="control-label"></label>
                <input asp-for="MarcaNombre" class="form-control" />
                <span asp-validation-for="MarcaNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloNombre" class="control-label"></label>
                <input asp-for="ModeloNombre" class="form-control" />
                <span asp-validation-for="ModeloNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoDescripcion" class="control-label"></label>
                <input asp-for="ProductoDescripcion" class="form-control" />
                <span asp-validation-for="ProductoDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
